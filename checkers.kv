<title>:
    BoxLayout:
        Button:
            text: 'Settings'
            on_press: root.manager.current = 'settings'
        Button:
            text: 'Quit'
            on_press: app.stop()

<settings>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Option 1'
        Button:
            text: 'Option 2'
        Button:
            text: 'Option 3'
        Button:
            text: 'Main Menu'
            on_press: root.manager.current = 'menu'

<square>:
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
